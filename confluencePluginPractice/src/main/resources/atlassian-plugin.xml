<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="confluencePluginPractice"/>
    
    <!-- add our web resources -->
    <web-resource key="${atlassian.plugin.key}-resources" name="${project.name} Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="confluencePluginPractice.css" location="/css/confluencePluginPractice.css"/>
        <resource type="download" name="confluencePluginPractice.js" location="/js/confluencePluginPractice.js"/>
   			<resource type="download" name="images/" location="/images"/>

        <context>confluencePluginPractice</context>
    </web-resource>

    <!-- add macro -->
    <xhtml-macro name="ID Container" 
								 class="com.stm32p103.plugin.macro.IdContainer"
                 key="id-container">
      <description>マクロIDでページ内の要素を区別できるようにする要素。プレビューで「レンダリング中にエラーが発生しました null 」と表示されるのは原因が分からない。</description>
      <category name="development"/>
      <parameters/>
    </xhtml-macro>
</atlassian-plugin>